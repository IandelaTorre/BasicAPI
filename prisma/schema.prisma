generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["catalogs", "user"]
}

model User {
  id             Int       @id @default(autoincrement())
  email          String    @unique
  name           String?
  lastName       String?
  secondLastName String?
  password       String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  enabled        Boolean   @default(true)
  rolId          Int
  uuid           String    @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_code      String    @unique
  rol            Cat_Rols  @relation(fields: [rolId], references: [id])
  logs           UserLog[]

  @@schema("user")
}

model UserLog {
  id        Int      @id @default(autoincrement())
  action    String
  createdAt DateTime @default(now())
  uuid      String   @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userUuid  String   @db.Uuid
  user      User     @relation(fields: [userUuid], references: [uuid])

  @@schema("user")
}

model Cat_Url {
  id                 Int                  @id @default(autoincrement())
  url                String
  code               String               @unique(map: "unique_cat_urls_code")
  enabled            Boolean              @default(true)
  uuid               String               @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  Cat_rol_Permission Cat_rol_Permission[]

  @@schema("catalogs")
}

model Cat_rol_Permission {
  id          Int      @id @default(autoincrement())
  cat_rols_id Int
  cat_url_id  Int
  enabled     Boolean  @default(true)
  uuid        String   @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  catRol      Cat_Rols @relation(fields: [cat_rols_id], references: [id])
  catUrl      Cat_Url  @relation(fields: [cat_url_id], references: [id])

  @@schema("catalogs")
}

model Cat_Rols {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique(map: "unique_cat_rols_name")
  visual_name        String
  createdAt          DateTime             @default(now())
  enabled            Boolean              @default(true)
  uuid               String               @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  Cat_rol_Permission Cat_rol_Permission[]
  User               User[]

  @@schema("catalogs")
}
